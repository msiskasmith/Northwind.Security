@model Northwind.Security.Models.ActivateAccountModel

@{
    ViewData["Title"] = "Activate Account";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

        <p>Hi @Model.FirstName, Create a password and activate your account below</p>
        <form asp-action="ActivateAccount">
             @await Html.PartialAsync("_ModelStateErrorsPartial")
            
            <div class="form-group d-none">
                <label asp-for="UserIdentifier" class="control-label"></label>
                <input asp-for="UserIdentifier" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div class="form-group d-none">
                <label asp-for="Token" class="control-label"></label>
                <input asp-for="Token" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Activate Account" class="btn btn-primary w-100"/>
            </div>
        </form>
