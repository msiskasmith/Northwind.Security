@model Northwind.Security.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}
        <form asp-action="Login">

            @await Html.PartialAsync("_ModelStateErrorsPartial")

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>

            <div class="form-group d-none">
                <input asp-for="ResponseType" class="form-control" />
            </div>

            <div class="form-group d-none">
                <input asp-for="ClientId" class="form-control" />
            </div>

            <div class="form-group d-none">
                <input asp-for="RedirectUri" class="form-control" />
            </div>

             <div class="form-group d-none">
                <input asp-for="Scope" class="form-control" />
            </div>

            <div class="form-group d-none">
                <input asp-for="State" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary w-100" />
            </div>

            <a href="/ForgotPassword?response_type=@Model.ResponseType&client_id=@Model.ClientId&redirect_uri=@Model.RedirectUri&scope=@Model.Scope&state=@Model.State">Forgot Password</a>
        </form>

