@model Northwind.Security.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

@if (@Model.ResetLinkSent)
{
    
}
else
{
    <form asp-action="ForgotPassword">
            
            @await Html.PartialAsync("_ModelStateErrorsPartial")

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="form-group d-none">
                <input asp-for="ResponseType" class="form-control" />
            </div>

            <div class="form-group d-none">
                <input asp-for="ClientId" class="form-control" />
            </div>

            <div class="form-group d-none">
                <input asp-for="RedirectUri" class="form-control" />
            </div>

             <div class="form-group d-none">
                <input asp-for="Scope" class="form-control" />
            </div>

            <div class="form-group d-none">
                <input asp-for="State" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Recover Password" class="btn btn-primary w-100" />
            </div>
        </form>
}


